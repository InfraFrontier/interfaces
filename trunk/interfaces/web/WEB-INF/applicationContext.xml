    </bean>
    -->
    
    <!-- SCHEDULER -->
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="bglistTrigger"/>
              <!--     <ref bean="updateBibliosTrigger"/>
              <ref bean="rssTrigger"/>
                <ref bean="updateBibliosTrigger"/> <ref bean="smailerTrigger"/>-->
            </list>
        </property>
    </bean>
</beans>
