<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p: %c{2} - %m%n" />
		</layout>
	</appender>

	<!-- Application logger -->
	<logger name="emma">
		<level value="info" />
	</logger>

	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.beans">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.jdbc">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.transaction">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.orm">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.web">
		<level value="debug" />
	</logger>

	<logger name="org.springframework.webflow">
		<level value="debug" />
	</logger>

	<logger name="org.springframework.scheduling.quartz">
		<level value="debug" />
	</logger>

	<logger name="org.quartz.Job">
		<level value="debug" />
	</logger>
	
	<logger name="uk.ac.ebi.phenotype.admin.job">
		<level value="debug" />
	</logger>
	
	<logger name="uk.ac.ebi.phenotype.web.controller">
		<level value="debug" />
	</logger>	

	<logger name="uk.ac.ebi.phenotype.data.europhenome">
		<level value="debug" />
	</logger>	
	
	<logger name="org.emmanet.data.mgi">
		<level value="debug" />
	</logger>
	
	<logger name="uk.ac.ebi.phenotype.data.stats">
		<level value="all" />
	</logger>

	<logger name="org.emmanet.jobs">
		<level value="debug" />
	</logger>
		
	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>